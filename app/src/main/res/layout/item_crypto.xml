<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cryptoItemImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/bitcoin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/symbol_of_coin" />

    <TextView
        android:id="@+id/cryptoItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bitcoin"
        android:textSize="16sp"
        android:textColor="@color/item_name"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cryptoItemImage"
        />

    <TextView
        android:id="@+id/cryptoItemSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="BTC"
        android:textSize="14sp"
        android:textColor="@color/item_symbol"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/cryptoItemName"
        app:layout_constraintStart_toEndOf="@id/cryptoItemImage"
        />

    <TextView
        android:id="@+id/cryptoItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/item_price"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/cryptoItemImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$ 28,600.74" />

    <TextView
        android:id="@+id/cryptoItemPriceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="14dp"
        android:textColor="@color/item_price_change_plus"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/cryptoItemImage"
        app:layout_constraintTop_toBottomOf="@id/cryptoItemPrice"
        tools:text="+ 4.05%" />

</androidx.constraintlayout.widget.ConstraintLayout>